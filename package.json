{
  "name": "hello-app",
  "version": "1.0.0",
  "main": "src/index.js",
  "license": "MIT",
  "scripts": {
    "build-client": "cd src/client && yarn build",
    "start": "yarn build-client && node src/index.js",
    "dev": "nodemon --ignore src/client/build/ --exec yarn start",
    "test-client": "cd src/client && yarn test -- --watchAll=false",
    "test-server": "yarn build-client && jest ./src/server",
    "test": "yarn test-client && yarn test-server"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "express": "^4.17.2"
  },
  "devDependencies": {
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6"
  }
}
